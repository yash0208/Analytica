<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/revenue_bro"
            app:civ_border_width="2dp"
            app:civ_border_color="#6AE3D4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/user"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18dp"
            android:text="Yash Mehta"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:textColor="#888888"
        android:id="@+id/opinion"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="15dp"
        android:maxLines="10"
        android:text="Despite the explosion of firms going public, half of the companies that listed on U.S. exchanges between 2015 and 2019 were trading below their IPO prices one year later, notes Ally Investâ€™s Lindsey Bell." />

</LinearLayout>