<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".Base">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_marginBottom="50dp"
        android:id="@+id/frame"
        android:layout_height="match_parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/inv"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#888888"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/type"
                        android:text="Evening "
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:text="Yash Mehta"
                        android:id="@+id/details"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginRight="100dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#888888"
                        android:textSize="18dp"
                        android:id="@+id/type1"
                        android:drawablePadding="5dp"
                        android:text="February 5, 2022"
                        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageButton
                    android:onClick="invs"
                    android:layout_width="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_dashboard_24"
                    android:background="@drawable/back_button"
                    android:layout_height="50dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/search"
                    android:cursorVisible="false"
                    android:background="@drawable/search"
                    android:padding="10dp"
                    android:saveEnabled="false"
                    android:drawablePadding="10dp"
                    android:textColorHint="#52555B"
                    android:hint="Search Here"
                    android:layout_marginRight="80dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:id="@+id/search_buttom"
                    android:background="@drawable/search"
                    android:src="@drawable/ic_baseline_search_24"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/back_button"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#01FBFA"
                            android:text="Sensex"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="#ffffff"
                                android:text="57,276.94"
                                android:id="@+id/sensex"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textColor="#299A5B"
                                android:text="1.18%"
                                android:id="@+id/sensexc"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:layout_gravity="right"
                        android:orientation="vertical"
                        android:background="@drawable/back_button"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#01FBFA"
                            android:text="Nifty 50"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="#ffffff"
                                android:text="57,276.94"
                                android:id="@+id/nift"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textColor="#299A5B"
                                android:text="1.18%"
                                android:id="@+id/niftc"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/back_button"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#01FBFA"
                            android:text="Nifty Bank"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="#ffffff"
                                android:text="57,276.94"
                                android:id="@+id/nifb"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textColor="#299A5B"
                                android:text="1.18%"
                                android:id="@+id/niftb"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:padding="5dp"

                        android:orientation="vertical"
                        android:background="@drawable/back_button"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#01FBFA"
                            android:text="Nifty IT"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="#ffffff"
                                android:text="57,276.94"
                                android:id="@+id/gold"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textColor="#299A5B"
                                android:text="1.18%"
                                android:id="@+id/goldc"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="30dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/rec_inv"
                android:layout_height="0dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/card1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_margin="10dp"

                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/news1"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="170dp"
                    android:id="@+id/artical"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Look out for the FY22 revised estimates"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Read More"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nunito_bold"
                    android:background="@drawable/button1"
                    android:paddingLeft="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/open"
                    android:drawableRight="@drawable/ic_baseline_menu_book_24"
                    android:drawablePadding="10dp"
                    android:layout_height="40dp"/>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/home"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:id="@+id/scroll"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:padding="10dp"
                    android:background="@color/background"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Budget.clc"
                        android:layout_gravity="center_vertical"
                        android:textSize="30dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:src="@drawable/budget"
                            android:id="@+id/buf"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_marginLeft="10dp"

                            android:id="@+id/data"
                            android:src="@drawable/economics"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                </FrameLayout>
                <com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cal22"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:primaryColor="@color/background"
                    app:textColor="@android:color/white"
                    app:selectedItem_textColor="#ffffff"
                    app:todayItem_textColor="#ffffff"
                    app:todayItem_background="@drawable/selected_date"
                    app:selectedItem_background="@drawable/selected_date"
                    app:buttonLeft_drawableTintColor="@android:color/white"
                    app:buttonRight_drawableTintColor="@android:color/white"
                    app:expandIconColor="@android:color/white">
                </com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="#262837"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#6AE3D4"
                            android:text="Select date and fill the details"
                            android:layout_height="wrap_content"/>

                        <CalendarView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/calender"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp"
                            android:theme="@style/CardView.Dark"
                            android:backgroundTint="#1B1F22"
                            android:foregroundTint="@color/white"
                            android:dateTextAppearance="@style/Widget.CalendarView.Custom"
                            android:background="@drawable/cal_back"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:id="@+id/viewFlipper"
                    android:autoStart="true"

                    android:layout_height="260dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageView1"
                        app:riv_corner_radius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        />
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageView2"
                        app:riv_corner_radius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        />
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageView3"
                        app:riv_corner_radius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        />
                </ViewFlipper>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/txt"
                    android:text="Expenses "
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:id="@+id/exp_img"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Add Expense"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rec"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/txt1"
                    android:text="Bills "
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rec1"
                    android:layout_weight="1"
                    android:layout_marginBottom="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"

            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button2"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:contentDescription="Add"
                app:srcCompat="@drawable/ic_baseline_camera_alt_24"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="Add"

                app:srcCompat="@drawable/ic_baseline_add_24"/>

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/news_lay"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newspagger"/>
    </FrameLayout>
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#ffffff"
        app:mbn_backgroundBottomColor="#262837"
        android:layout_gravity="bottom"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#ffffff"
        android:id="@+id/bottomnavigation"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="#3c415e"
        app:mbn_shadowColor="#1f212121"
        />
</FrameLayout>