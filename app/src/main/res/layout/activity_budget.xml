<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Budget">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="25dp"
                    android:text="Let's Plan \nYour Monthly \nBudget"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/revenue_bro"
                    android:layout_height="150dp"/>
            </FrameLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:background="#282A3B"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/back_button"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:text="Your Monthly Salary"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/back1"
                        android:inputType="number"
                        android:padding="5dp"
                        android:id="@+id/income"
                        android:textColorHint="#888888"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="10dp"
                        android:hint="Ex. 20000"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="18dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="20dp"
                        android:text="Standard Budget Plan"
                        android:layout_height="wrap_content"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="300dp"
                        />
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="300dp"
                        android:layout_height="300dp" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="10dp"
                        android:visibility="gone"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <com.anychart.AnyChartView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="#191923"
                            android:id="@+id/chart"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:text="Any Debt EMI( 'Like EMI For Any Loan' ) :"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/back1"
                        android:inputType="number"
                        android:padding="5dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"
                        android:layout_marginTop="10dp"
                        android:hint="Ex. 5000"
                        android:id="@+id/debt"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="18dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        android:text="Regular Medical Charges( 'If Your Family Member Have Any Major Medical Issue For Which You Have To Pay Specific Amount Every Month' ) :"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/back1"
                        android:inputType="number"
                        android:id="@+id/mc"
                        android:padding="5dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="10dp"
                        android:textColorHint="#888888"
                        android:hint="Ex. 5000"
                        android:layout_height="50dp"/>
                    <Button
                        android:layout_width="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="0dp"
                        android:layout_height="50dp"
                        android:textColor="#ffffff"
                        android:id="@+id/genrate"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="My Budget"
                        android:drawableRight="@drawable/ic_baseline_calculate_24"
                        android:paddingRight="10dp"
                        android:background="@drawable/clc_button"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                android:id="@+id/card"
                android:background="@drawable/back_button"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cal_layout"
                    android:orientation="vertical"
                    android:background="@drawable/card"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="top"
                        android:layout_height="150dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/nunito_bold"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:textSize="25dp"
                            android:text="Your Monthly \nBudget"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/personal_finance_rafiki"
                            android:layout_height="150dp"/>

                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:text="As Per Your Details :"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:id="@+id/dt"
                        android:textColor="#888888"
                        android:text="Your Debt : 2000 (10% Of Your Income)"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:id="@+id/mt"
                        android:layout_marginRight="10dp"
                        android:textColor="#888888"
                        android:text="Your Medical Expense : 1000 (5% Of Your Income)"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:id="@+id/debt_info"
                        android:textColor="#1e1e1e"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:id="@+id/medi_debt_info"
                        android:textColor="#1e1e1e"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:text="Your Desired Monthly Budget Plan :"
                        android:textColor="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <com.anychart.AnyChartView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="#191923"
                            android:id="@+id/chart2"/>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:layout_width="200dp"
                        android:onClick="home"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_home_24"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Home"
                        android:background="@drawable/back"
                        android:layout_gravity="left"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>