<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DailyData">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="28/07/2021"

                    android:drawablePadding="10dp"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:id="@+id/date"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:onClick="back"
                    android:src="@drawable/ic_baseline_home_24"
                    android:background="@drawable/back_button"
                    android:layout_height="40dp"/>
            </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:background="#282A3B"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/back_button"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:text="Expense Details :"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#888888"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back1"
                android:inputType="text"
                android:hint="Ex. Rice"
                android:id="@+id/details"
                android:fontFamily="@font/nunito_semibold"
                android:padding="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:text="Select Expense Type :"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner1"
                    style="@style/mySpinnerItemStyle"
                    android:textColorHint="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/back1"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:text="Expense Cost (â‚¹) :"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:textColorHint="#888888"

                android:layout_marginRight="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:hint="Ex. 200"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back1"
                android:id="@+id/exp"
                android:fontFamily="@font/nunito_semibold"
                android:padding="5dp" />
            <Button
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Add Expense"
                android:onClick="add"
                android:background="@drawable/clc_button"
                android:layout_gravity="right"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/exp_img"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/invoice"
                    android:layout_height="300dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Expense"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:id="@+id/txt"
                android:text="Expenses "
                android:fontFamily="@font/nunito_semibold"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/rec"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>