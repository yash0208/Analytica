<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".Trade">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="35dp"
                    android:layout_margin="10dp"
                    android:layout_height="35dp"
                    android:src="@drawable/revenue_bro"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#01FBFA"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Yash Mehta"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#2CC89A"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/portfolio_card"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Portfolio Value"
                            android:textColor="#909090"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="30dp"
                            android:textSize="15dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="35,500 Rs"
                                android:textColor="#ffffff"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/nunito_semibold"
                                android:layout_marginLeft="30dp"
                                android:textSize="30dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="+ 2.11%"
                                android:layout_marginLeft="10dp"
                                android:textColor="#1ECA99"
                                android:layout_gravity="right"
                                android:fontFamily="@font/nunito_semibold"
                                android:textSize="15dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:layout_height="wrap_content">
                            <Button
                                android:layout_width="wrap_content"
                                android:text="Deposit"
                                android:textAllCaps="false"
                                android:textSize="15dp"
                                android:layout_marginLeft="30dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textColor="#ffffff"
                                android:background="@drawable/card22"
                                android:layout_height="35dp"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:text="Withdraw"
                                android:textAllCaps="false"
                                android:textSize="15dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nunito_bold"
                                android:textColor="#ffffff"
                                android:background="@drawable/card23"
                                android:layout_height="35dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Available Funds"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="170dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/card25"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/basket"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Basic Needs"
                                    android:id="@+id/details"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:id="@+id/need"
                                    android:text="18,000"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="170dp"
                            android:background="@drawable/card25"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/cardiogram"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Medical Exp."
                                    android:id="@+id/mediacl1"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:id="@+id/medical"
                                    android:text="5600"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#212026"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/card25"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/investment"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Investment"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:id="@+id/inv"
                                    android:text="5000"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#212026"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/card25"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/debt"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Debt Exp."
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:id="@+id/deb"
                                    android:text="5600"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#212026"
                        android:layout_width="170dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/card25"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ent"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Entertainment"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:text="18,000"
                                    android:id="@+id/ent"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:backgroundTint="#212026"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/card25"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="40dp"
                                android:background="@drawable/card26"
                                android:layout_margin="10dp"
                                android:padding="7dp"
                                android:layout_height="40dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/growth"
                                    app:civ_border_color="#888888"/>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="45dp"
                                android:padding="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#01FBFA"
                                    android:textSize="15dp"
                                    android:text="Total Income"
                                    android:fontFamily="@font/nunito_bold"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#888888"
                                    android:textSize="15dp"
                                    android:id="@+id/tinc"
                                    android:text="40,000"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>